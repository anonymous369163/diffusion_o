    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python 调试程序: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "TSP训练调试",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/difusco/train.py",
            "console": "integratedTerminal",
            "args": [
                "--task", "tsp",
                "--diffusion_type", "categorical",
                "--learning_rate", "0.0002",
                "--weight_decay", "0.0001",
                "--lr_scheduler", "cosine-decay",
                "--storage_path", "./",
                "--training_split", "data/tsp/tsp50_train_concorde.txt",
                "--validation_split", "data/tsp/tsp50_test_concorde.txt",
                "--test_split", "data/tsp/tsp50_test_concorde.txt",
                "--batch_size", "64",
                "--num_epochs", "100",
                "--validation_examples", "8",
                "--inference_schedule", "cosine",
                "--inference_diffusion_steps", "50",
                "--rl_compute_frequency", "10",
                "--use_pomo",
                "--rl_loss_weight", "0.01",
                "--rl_baseline_decay", "0.95",
                "--pomo_temperature", "1",
                "--do_train",
                "--do_test"
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "0,1,2,3,4,5,6,7",
                "PYTHONPATH": "${workspaceFolder}:${env:PYTHONPATH}"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}